{
  "manifest_version": 2,

  "name": "MUA Web Unicode Converter",
  "description": "This extension will check web content and convert to Unicode encoded text automatically if they are Zawgyi.",
  "version": "1.9",

  "browser_action": {
    "default_icon": {
	"19": "icon19.png",
	"38": "icon38.png"
	}
  },
  "icons": { 
           "48": "icon48.png",
          "128": "icon128.png" },
  "content_scripts": [{
        "matches": ["*://*/*"],
        "css": ["zawgyi.css"],
        "js":      ["parabaik.js","converter.js"],
       "run_at": "document_idle"
    }],
  "permissions": [
    "activeTab"
  ]
}
